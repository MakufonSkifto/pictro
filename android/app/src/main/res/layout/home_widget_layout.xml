<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:id="@+id/widget_container">

    <ImageView
        android:id="@+id/scribb_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/image" />

    <ImageView
        android:id="@+id/circular_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/scribb_view"
        android:layout_alignTop="@id/scribb_view"
        android:layout_alignEnd="@id/scribb_view"
        android:layout_alignBottom="@id/scribb_view"
        android:layout_marginStart="-9dp"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="-9dp"
        android:layout_marginBottom="-9dp"
        android:background="@drawable/image_background"
        android:contentDescription="@string/image" />
</RelativeLayout>
